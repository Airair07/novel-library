<%= link_to "戻る", novel_path(@episode.novel), class: 'btn btn-primary btn-sm' %>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
<h3><%= @episode.subtitle %>の編集</h3>

    <%= form_with(model: @episode, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    
      <div class="form-group">
        <%= f.label :subtitle, 'サブタイトル(第○話 ～ など・100文字以内)' %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :number, '通し番号(第1話なら1、第2話なら2)' %>
        <div class="row">
          <div class="col-2">
            <%= f.text_field :number, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :text, '本文(10000文字以内)' %>
        <%= f.text_area :text, class: 'form-control', rows: 30 %>
      </div>

      <div class="text-right">
      <%= f.submit '編集', class: 'btn btn-primary' %>
      </div>

    <% end %>

  </div>
</div>
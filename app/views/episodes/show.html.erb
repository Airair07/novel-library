
<div class="row">
  <div class="col-6">
    <%= link_to "目次に戻る", novel_path(@episode.novel), class: 'btn btn-primary btn-sm' %>
  </div>
  <% if current_user == @episode.novel.user %>
  <div class="col-6 text-right">
    <%= link_to "編集", edit_episode_path(@episode), class: 'btn btn-primary btn-sm' %>
    <%= link_to "削除", @episode, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %>
  </div>
  <% end %>
</div>

<div class="col-sm-10 offset-sm-1">

<div class="text-center mb-4">
<p><h2 class="font-weight-bold"><%= @episode.subtitle %></h2></p>
</div>

<div class="mb-4">
<%= simple_format(@episode.text) %>
</div>

</div>
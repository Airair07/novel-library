<div class="text-center mb-4">
  <h1>Novel library</h1>
</div>

<div class="row">
  
  <div class="col-sm-10 offset-sm-1">
      <h5>更新された小説</h5>
    <div class="border pl-3 pt-3 mb-4">
      <ul class="list-unstyled">
        <% @episodes.each do |episode| %>
        <% novel = episode.novel %>
        <% max_number = novel.episodes.maximum(:number) %>
          <% if max_number == episode.number %>
          <li class="mb-3">
              <div>
                <%= link_to episode.novel.title, episode.novel %>(全<%= novel.episodes.count %>話) - <%= link_to episode.novel.user.name, user_path(episode.novel.user) %> <span class="text-muted"> - <%= episode.created_at %></span>
              </div>
          </li>
          <% end %>
        <% end %>
        <%= paginate @episodes %>
      </ul>
    </div>
      <h5>新着の小説</h5>
    <div class="border pl-3 pt-3">
      
      <ul class="list-unstyled">
        <% @new_novels.each do |new_novel| %>
          <% unless new_novel.episodes.empty? %>
          <li class="mb-3">
              <div>
                <%= link_to new_novel.title, new_novel %> - <%= link_to new_novel.user.name, user_path(new_novel.user) %> <span class="text-muted"> - <%= new_novel.created_at %></span>
              </div>
          </li>
          <% end %>
        <% end %>
        <%= paginate @new_novels %>
      </ul>
    </div>
    
  </div>
</div>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
      <h5>新着の小説</h5>
    <div class="border pl-3 pt-3">
      
      <ul class="list-unstyled">
        <% @novels.each do |novel| %>
          <li class="mb-3">
              <div>
                <%= link_to novel.title, novel %> - <%= link_to novel.user.name, user_path(novel.user) %> <span class="text-muted"> - <%= novel.created_at %></span>
              </div>
          </li>
        <% end %>
        <%= paginate @novels %>
      </ul>
      
    </div>
  </div>
</div>
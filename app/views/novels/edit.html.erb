<%= link_to "戻る", @novel, class: 'btn btn-primary btn-sm' %>
<div class="row">
  <div class="col-sm-10 offset-sm-1">

<h3><%= @novel.title %>の編集</h3>

    <%= form_with(model: @novel, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :title, '作品タイトル(100文字以内)' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :story, 'あらすじ(1000文字以内)' %>
        <%= f.text_area :story, class: 'form-control', rows: 10 %>
      </div>

      <div class="text-right">
      <%= f.submit '編集', class: 'btn btn-primary' %>
      </div>
    <% end %>
    
  </div>
</div>